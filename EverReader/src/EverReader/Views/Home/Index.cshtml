@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        @*<li data-target="#myCarousel" data-slide-to="3"></li>*@
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/everreader-banners-02.png" alt="Read long-form content" class="img-responsive" />
            <div class="container">
                <div class="carousel-caption">
                    <p>
                        Read your long-form Evernote content
                    </p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/images/everreader-banners-03.png" alt="Autosaves your reading position" class="img-responsive" />
            <div class="container">
                <div class="carousel-caption">
                    <p>
                        Automatically saves reading position
                    </p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/images/everreader-banners-01.png" alt="Package Management" class="img-responsive" />
            <div class="container">
                <div class="carousel-caption">
                    <p>
                        Create custom bookmarks for each document
                    </p>
                </div>
            </div>
        </div>
        @*<div class="item">
            <img src="~/images/Banner-01-Azure.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="container">
                <div class="carousel-caption">
