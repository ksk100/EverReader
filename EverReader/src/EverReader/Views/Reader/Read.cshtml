@model EverReader.ViewModels.Reader.ReaderViewModel

@{
    ViewBag.Title = "Reader: " + Model.Title;
}

<h2>@ViewData["Title"].</h2>

<div class="row">
    <div class="col-md-12">
        @Html.Raw(@Model.Content)
    </div>
</div>

<div class="navbar navbar-inverse navbar-fixed-bottom">
    <div class="container">
        <div class="navbar-header navbar-left">
            <ul class="nav navbar-nav">
                <li><a href="#" onclick="window.history.back(); return false">Back</a></li>
            </ul>
        </div>
        <div class="navbar-header navbar-right">
            <ul class="nav navbar-nav">
                <li><a id="positionReport"></a></li>
            </ul>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        var noteGuid = "@Model.NoteGuid";
        var percentageRead = @Model.PercentageRead;
    </script>
    <script src="~/lib/moment/moment.js"></script>
    <script src="~/js/reader.js"></script>
}
